<?xml version="1.0"?>

<resources>

    <!-- Base application theme. -->


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->


        <item name="colorPrimary">@color/colorPrimary</item>

        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowTranslucentStatus">true</item>

        <item name="windowActionBarOverlay">true</item>

    </style>


    -

    <style name="ThemeActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">

        <item name="android:background">@null</item>

        <!-- Support library compatibility -->


        <item name="background">@null</item>

        <item name="android:displayOptions">showHome|useLogo</item>

        <item name="displayOptions">showHome|useLogo</item>

    </style>


    -

    <style name="EdittextTheme" parent="Theme.MaterialComponents">

        <item name="colorControlActivated">@color/white</item>

        <item name="colorControlNormal">#50FFFFFF</item>

    </style>


    -

    <style name="EdittextThemeDark" parent="Theme.MaterialComponents">

        <item name="colorControlActivated">@color/black</item>

        <item name="colorControlNormal">#50000000</item>

    </style>


    -

    <style name="toolbar_title_text" parent="Widget.AppCompat.Toolbar">

<!--        <item name="android:fontFamily">@font/semibold</item>-->

        <item name="android:textAllCaps">false</item>

        <item name="android:layout_gravity">center</item>

        <item name="android:textColor">@color/black</item>

        <item name="android:textSize">@dimen/text_medium</item>

    </style>


    -
    <!--

        <style name="EnterDialogAnimation">

            <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>

        </style>
    -->


    -

    <style name="ExitDialogAnimation">

        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>

    </style>


    -

    <style name="DialogTheme" parent="@style/Base.Theme.AppCompat.Light.Dialog">

        <item name="android:windowTranslucentStatus">true</item>

    </style>


    -

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">

        <item name="colorControlNormal">@color/colorPrimary</item>

    </style>


    -

    <style name="ToolbarThemeBlack" parent="@style/ThemeOverlay.AppCompat.ActionBar">

        <item name="colorControlNormal">@color/black</item>

    </style>


    -

    <style name="radiobutton">

        <item name="colorControlNormal">@color/black</item>

        <item name="colorAccent">@color/black</item>

    </style>


    -

    <style name="mySwitchTheme">

        <item name="colorControlActivated">@color/colorPrimary</item>

        <item name="colorControlNormal">@color/white</item>

<!--     <item name="trackTint">@color/track_tint</item>-->

    </style>


    -

    <style name="RatingBar" parent="Theme.AppCompat">

        <item name="colorControlNormal">@color/white</item>

        <item name="colorControlActivated">@color/colorPrimary</item>

    </style>


    -

    <style name="FilterRatingBar" parent="Theme.AppCompat">

        <item name="colorControlNormal">@color/black</item>

    </style>


    -

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">

        <item name="android:windowIsFloating">false</item>

        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:windowSoftInputMode">adjustResize</item>

    </style>


    -

    <style name="PauseDialogAnimation">

<!--        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>-->

        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>

    </style>


    -

    <style name="ButtonStyle">

<!--        <item name="android:fontFamily">@font/semibold</item>&ndash;&gt;-->

        <item name="android:textColor">@color/white</item>

        <item name="android:textAllCaps">false</item>

        <item name="android:textSize">@dimen/text_medium</item>

        <item name="android:background">@drawable/button_corner_round_solid</item>

    </style>

    <style name="ButtonS">

        <!-- <item name="android:fontFamily">@font/semibold</item>-->

        <item name="android:textColor">@color/white</item>

        <item name="android:textAllCaps">false</item>

        <item name="android:textSize">@dimen/text_medium</item>

        <item name="android:background">@drawable/button_corner_round_whitesolid</item>

    </style>

    -

    <style name="TextStyle">

<!--        <item name="android:fontFamily">@font/semibold</item>-->

        <item name="android:textColor">@color/white</item>

        <item name="android:textAllCaps">false</item>

        <item name="android:textSize">@dimen/text_small</item>

    </style>

</resources>
