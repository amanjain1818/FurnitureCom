<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="3dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="10dp"
        android:background="@color/white"
        app:cardElevation="4dp">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:background="@drawable/chair" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/kewname"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Kew Chair"
        android:textStyle="bold"
        android:layout_margin="4dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/kewinfo"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint=" A chair"
        android:layout_margin="4dp"
        android:textColor="@color/black"
        android:textSize="10dp" />
    <TextView
        android:id="@+id/kewdes"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Breakable"
        android:layout_margin="4dp"
        android:textColor="@color/black"
        android:textSize="10dp"/>
    <TextView
        android:id="@+id/kewprice"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="2000"
        android:layout_margin="4dp"
        android:drawableRight="@drawable/ic_delete_black_24dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textSize="15dp"/>

</LinearLayout>